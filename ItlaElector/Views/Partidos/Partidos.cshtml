@model DataBase.ViewModels.PartidosViewModels
@{

    Layout = "~/Views/Shared/_LayoutStart.cshtml";
    ViewData["Title"] = "Partidos";
}
<style>
    label {
        cursor: pointer;
    }

    #upload-photo {
        opacity: 0;
        position: absolute;
        z-index: -1;
    }

.upload-photo2
{ opacity: 0; position: absolute; z-index: -1; }
</style>
<body style="background: #2980b9; /* fallback for old browsers */
    background: -webkit-linear-gradient(to left, #2c3e50, #2980b9); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to left, #2c3e50, #2980b9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */">

    <header class="container-fluid shadow position-relative fixed-top col-lg-pull-2 border-bottom bg-light" id="HeaderHome">

        <div class="row ml-4 p-1">

            <div class="font-weight-bolder pt-2" style="font-family: 'Lemonada', cursive;">
                <h1>Partidos</h1>
            </div>

            <a asp-controller="Admin" asp-action="Home" class="btn btn-info ml-auto btn-group-sm rounded pt-1 mt-1" style="font-size:17px; font-family: 'Lemonada', cursive; height:2%;"><i class="fa fa-home" aria-hidden="true"></i> Home</a>

        </div>

    </header>

    <div class="container mt-5 d-flex justify-content-center">

        <div class="card rounded shadow-lg p-1 bg-dark" style="width: 100rem; ">

            <div class="card-header bg-transparent row ml-3">

                <h2 class="mr-auto text-white" style="font-family: 'Abril Fatface', cursive;"><i class="fa fa-users" aria-hidden="true"></i> Agregar Partido</h2>
                <a data-toggle="modal" data-target="#agregarNewCiudadano" class="btn btn-success ml-auto btn-lg  text-white" style="margin-right:5px;">Nuevo Partido</a>

                <div class="modal fade" id="agregarNewCiudadano" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                        <div class="modal-content bg-success">

                            <div class="modal-header bg-success text-white rounded-bottom shadow">


                                <div class=" mr-auto">
                                    <h2 class="modal-title"><i class="fa fa-plus" aria-hidden="true"></i> Agregar Partido</h2>
                                </div>
                                <div class="">
                                    <button type="button" class="btn btn-danger btn-sm text-white p-2 rounded-pill" style="font-size:14px;" data-dismiss="modal" aria-label="Close">
                                        Cancelar
                                    </button>
                                </div>

                            </div>

                            <form asp-action="Partidos" asp-controller="Partidos" method="post" enctype="multipart/form-data">
                                <div class="modal-body bg-light">



                                    <div class="form-group">
                                        <span asp-validation-for="Photo" class="text-danger text-center"></span>

                                        <label class="ml-3" style="font-family: 'Rowdies', cursive; font-size:15px;">Foto</label>
                                        <div>
                                            <div class="d-flex justify-content-center">
                                                <img id="imagenPrevisualizacion" src="~/images/Candidato/profile-logo.png" asp-append-version="true"
                                                     class="rounded-circle " style="width: 150px;height: 150px; ">
                                            </div>
                                            <div class="d-flex justify-content-center mt-2">
                                                <div>
                                                    <label for="upload-photo" class="btn btn-outline-primary mr-3 rounded float-left">Añadir foto</label>
                                                    <input type="file" name="photo" id="upload-photo" asp-for="Photo" accept="image/*" required />
                                                    <button type="button" id="delete" class="btn btn-outline-danger rounded float-left" hidden>Quitar</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="ml-3" style="font-family: 'Rowdies', cursive; font-size:15px;">Nombre</label>   <span asp-validation-for="Nombre" class="text-danger text-center"></span>

                                        <input asp-for="Nombre" class="form-control shadow-sm p-3 bg-white rounded-pill form-control-lg border-bottom border-dark" placeholder="Ingresar Nombre">
                                    </div>
                                    <div class="form-group">
                                        <label class="ml-3" style="font-family: 'Rowdies', cursive; font-size:15px;">Descripcion</label>    <span asp-validation-for="Descripcion" class="text-danger text-center"></span>
                                        @*<textarea class="form-control shadow-sm p-3 bg-white rounded-pill form-control-lg border-bottom border-dark" placeholder="Escribrir descripcion del partido"></textarea>*@
                                        <input asp-for="Descripcion" class="form-control shadow-sm p-3 bg-white rounded-pill form-control-lg border-bottom border-dark" id="" placeholder="Ingresar descripcion">
                                    </div>
                                    <input type="hidden" name="Estado" value="Activo" />

                                    <div class="form-group row mt-4">
                                        <div class="col">
                                            <input type="submit" value="Agregar" class="btn btn-outline-success btn-block" style="font-family: 'Rowdies', cursive; font-size:15px;" />
                                        </div>
                                        <div class="col">
                                            <input type="reset" value="Limpiar" class="btn btn-outline-warning btn-block" style="font-family: 'Rowdies', cursive; font-size:15px;" />
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>







            </div>





            <div class="card-body bg-light table-responsive-sm">

                <table class="table table-striped text-center shadow rounded table-borderless">
                    <thead class="table-primary" style="font-family: 'Abril Fatface', cursive; font-size:13px;">
                        <tr>
                            <th scope="col">Logo</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Estado</th>
                            <th scope="col">🛠</th>
                        </tr>
                    </thead>
                    <tbody style="font-size:14px; overflow-y: scroll;">
                        @foreach (var p in Model.partidos)
                        {
                            <tr>
                                @{ var photopath = "~/images/Partido/" + (!string.IsNullOrEmpty(p.Logo) ? p.Logo : "UserPuestos.jpg");}
                                <td><img src="@photopath" class="mr-3 mt-2 rounded-pill" width="60" height="60" asp-append-version="true" /> </td>
                                <td>@Html.DisplayFor(ModelItem => p.Nombre)</td>
                                <td>
                                    @Html.DisplayFor(ModelItem => p.Descripcion)
                                </td>
                                <td>
                                    @if (p.Estado == "Inactivo")
                                    {
                                        @*Modelo para activar puesto*@

                                        <div class="text-danger font-weight-bolder">
                                            @Html.DisplayFor(ModelItem => p.Estado)
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="text-info font-weight-bolder">
                                            @Html.DisplayFor(ModelItem => p.Estado)
                                        </div>
                                    }
                                </td>

                                <td>
                                    @if (p.Nombre == "Ninguno")
                                    {

                                    }
                                    else
                                    {
                                        @*Editar partido*@
                                        <a data-toggle="modal" data-target="#EditarCiudadano@(p.IdPartido)" class="text-white btn btn-warning  btn-sm shadow rounded" style="margin-right:5px; font-size:12px;"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                                        <div class="modal fade" id="EditarCiudadano@(p.IdPartido)" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                                <div class="modal-content bg-success">

                                                    <div class="modal-header bg-warning text-dark rounded-bottom shadow">


                                                        <div class=" mr-auto">
                                                            <h2 class="modal-title"><i class="fa fa-pencil" aria-hidden="true"></i> Editar Partido</h2>
                                                        </div>
                                                        <div class="">
                                                            <button type="button" class="btn btn-danger btn-sm text-white p-2 rounded-pill" style="font-size:14px;" data-dismiss="modal" aria-label="Close">
                                                                Cancelar
                                                            </button>
                                                        </div>

                                                    </div>
                                                    <form asp-action="EditarPartido" asp-controller="Partidos" method="post">
                                                        <div class="modal-body bg-light">




                                                            <div class="form-group">
                                                                <label class="ml-3" style="font-family: 'Rowdies', cursive; font-size:15px;">Foto</label>
                                                                <div>
                                                                    <div class="d-flex justify-content-center">
                                                                        <img id="imagenPrevisualizacion_@p.IdPartido" src="@photopath" asp-append-version="true"
                                                                             class="rounded-circle " style="width: 150px;height: 150px; ">
                                                                    </div>
                                                                    <span asp-validation-for="Photo" class="text-danger text-center"></span>
                                                                    <div class="d-flex justify-content-center mt-2">
                                                                        <div>
                                                                            <label for="upload-photo2" class="btn btn-outline-primary mr-3 rounded float-left" onClick="upload(@p.IdPartido)">Añadir foto</label>
                                                                            <input class="upload-photo2" type="file" id="upload-photo_@p.IdPartido" asp-for="Photo" accept="image/*" onchange="change(@p.IdPartido)" />
                                                                            <button type="button" id="delete_@p.IdPartido" onClick="Deletephoto(@p.IdPartido)" class="btn btn-outline-danger rounded float-left">Quitar</button>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="ml-3" style="font-family: 'Rowdies', cursive; font-size:15px;">Nombre</label>
                                                                <input asp-for="Nombre" value="@p.Nombre" class="form-control ml-auto  btn-sm mb-2 shadow rounded bg-white rounded-pill form-control-lg border-bottom border-dark" placeholder="Ingresar Apellido">
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="ml-3" style="font-family: 'Rowdies', cursive; font-size:15px;">Descripcion</label>
                                                                @*<textarea class="form-control shadow-sm p-3 bg-white rounded-pill form-control-lg border-bottom border-dark" placeholder="Escribrir descripcion del partido"></textarea>*@
                                                                <input asp-for="Descripcion" value="@p.Descripcion" class="form-control shadow-sm p-3 bg-white rounded-pill form-control-lg border-bottom border-dark" id="" placeholder="Ingresar descripcion">
                                                            </div>
                                                            @*<input type="hidden" name="Estado" value="Activo" />*@
                                                            <input type="hidden" asp-for="IdPartido" value="@(p.IdPartido)" />

                                                            <div class="form-group row mt-4">
                                                                <div class="col">
                                                                    <input type="submit" value="Editar" class="btn btn-outline-success btn-block" style="font-family: 'Rowdies', cursive; font-size:15px;" />
                                                                </div>
                                                                <div class="col">
                                                                    <input type="reset" value="Limpiar" class="btn btn-outline-warning btn-block" style="font-family: 'Rowdies', cursive; font-size:15px;" />
                                                                </div>
                                                            </div>

                                                        </div>

                                                    </form>
                                                </div>
                                            </div>
                                        </div>




                                        @*ELIMINAR Partido*@
                                        @if (p.Estado == "Inactivo")
                                        {
                                            <a data-toggle="modal" data-target="#EliminarCiudadano@(p.IdPartido)" class="text-white btn btn-success ml-auto  btn-sm shadow rounded" style="margin-right:5px; font-size:12px;"><i class="fa fa-check-circle-o" aria-hidden="true"></i></a>

                                            <div class="modal fade " id="EliminarCiudadano@(p.IdPartido)" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-sm">
                                                    <div class="modal-content bg-info shadow-sm p-1 rounded">

                                                        <div class="modal-header bg-info p-1 rounded">

                                                            <h5 class="modal-title text-white font-weight-light mr-auto" id="staticBackdropLabel" style="font-family: 'Rowdies', cursive; font-size:20px;">Reactivar</h5>

                                                            <button type="button" class="btn btn-primary btn-sm text-white p-1 rounded mt-2 shadow-sm" style="font-size:11px;" data-dismiss="modal" aria-label="Close">
                                                                Cancelar
                                                            </button>

                                                        </div>

                                                        <div class="modal-body bg-light text-center">
                                                            <h4>¿SEGURO QUE QUIERE REACTIVAR ESTE PARTIDO?</h4>

                                                            <div class="mt-2 d-flex justify-content-center">
                                                                <a asp-action="EliminarPartido" asp-controller="Partidos" asp-route-id="@(p.IdPartido)" class="text-white btn btn-info shadow-lg ml-auto  btn-block" style="font-size:15px;"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Reactivar</a>

                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                        else
                                        {
                                            <a data-toggle="modal" data-target="#EliminarCiudadano@(p.IdPartido)" class="text-white btn btn-danger ml-auto  btn-sm shadow rounded" style="margin-right:5px; font-size:12px;"><i class="fa fa-trash" aria-hidden="true"></i></a>

                                            <div class="modal fade " id="EliminarCiudadano@(p.IdPartido)" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-sm">
                                                    <div class="modal-content bg-danger shadow-sm p-1 rounded">

                                                        <div class="modal-header bg-danger p-1 rounded">

                                                            <h5 class="modal-title text-white font-weight-light mr-auto" id="staticBackdropLabel" style="font-family: 'Rowdies', cursive; font-size:20px;">Eliminar</h5>

                                                            <button type="button" class="btn btn-primary btn-sm text-white p-1 rounded mt-2 shadow-sm" style="font-size:11px;" data-dismiss="modal" aria-label="Close">
                                                                Cancelar
                                                            </button>

                                                        </div>

                                                        <div class="modal-body bg-light text-center">
                                                            <h4>¿SEGURO QUE QUIERE ELIMINAR ESTE PARTIDO?</h4>

                                                            <div class="mt-2 d-flex justify-content-center">
                                                                <a asp-action="EliminarPartido" asp-controller="Partidos" asp-route-id="@p.IdPartido" class="text-white btn btn-danger shadow-lg ml-auto  btn-block" style="font-size:15px;"><i class="fa fa-trash" aria-hidden="true"></i></a>

                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        }
                                    }

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>

            </div>

        </div>

    </div>

    <script src='~/js/site.js'></script>
    <script>
        const $seleccionArchivos = document.querySelector("#upload-photo"),
            $imagenPrevisualizacion = document.querySelector("#imagenPrevisualizacion");
        $delete = document.querySelector("#delete");
        $seleccionArchivos.addEventListener("change", () => {
            const archivos = $seleccionArchivos.files;
            if (!archivos || !archivos.length) {
                $imagenPrevisualizacion.src = "";
                return;
            }
            const primerArchivo = archivos[0];
            const objectURL = URL.createObjectURL(primerArchivo);
            $imagenPrevisualizacion.src = objectURL;
            $('#delete').removeAttr('hidden')
        });
        $delete.addEventListener("click", () => {
            $seleccionArchivos.src = "";
            $imagenPrevisualizacion.src = "https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png";
            $('#delete').attr("hidden", true)
        });
        $seleccionArchivos2 = "",
            $imagenPrevisualizacion2 = "";
        $delete2 = "";
        $ids = 0;


        function upload(id) {
